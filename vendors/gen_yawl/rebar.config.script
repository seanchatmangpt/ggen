%%====================================================================
%% rebar.config.script - Conditional Build Configuration
%%====================================================================

%% Disable cover for OTP < 25 to avoid warnings
Ver = erlang:system_info(otp_release),
VerInt = try list_to_integer(Ver) catch _:_ -> 0 end,
case VerInt >= 25 of
    true ->
        CONFIG;
    false ->
        lists:keydelete(cover_enabled, 1, CONFIG)
end.
