[package]
name = "{{package_name}}"
version = "{{version}}"
edition = "2021"
description = "{{description}}"

[[bin]]
name = "{{bin_name}}"
path = "src/main.rs"

[dependencies]
clap = { version = "4.5", features = ["derive", "env"] }
anyhow = "1.0"
log = "0.4"
env_logger = "0.11"
{{#if config_toml}}
toml = "0.8"
{{/if}}
{{#if config_yaml}}
serde_yaml = "0.9"
{{/if}}
{{#if config_json}}
serde_json = "1.0"
{{/if}}
{{#if has_config}}
serde = { version = "1.0", features = ["derive"] }
{{/if}}
{{#if has_validators}}
regex = "1.10"
{{/if}}

[dev-dependencies]
assert_cmd = "2.0"
predicates = "3.1"
tempfile = "3.10"
{{#if unix_tests}}
nix = { version = "0.28", features = ["signal"] }
{{/if}}
