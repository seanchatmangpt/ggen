@startuml classification-flow
!theme blueprint

title OWL Ontology Classification and Realization Flow

start

:Load OWL Ontology;
note right
  Supported formats:
  - RDF/XML
  - Turtle
  - N-Triples
end note

:Parse TBox\n(Class Axioms);

:Select OWL Profile;
partition "Profile Selection" {
  if (Large ontology?) then (yes)
    :Use OWL 2 EL;
  elseif (Query-intensive?) then (yes)
    :Use OWL 2 QL;
  elseif (Rule-based?) then (yes)
    :Use OWL 2 RL;
  else (complex reasoning)
    :Use OWL 2 DL;
  endif
}

:Initialize Reasoner;

partition "Classification Phase" {
  :Compute Class Hierarchy;
  note right
    - Subsumption relationships
    - Direct super/sub classes
    - Ancestor/descendant chains
  end note

  :Identify Equivalence Classes;

  :Detect Unsatisfiable Classes;

  if (Unsatisfiable classes found?) then (yes)
    :Generate Explanations;
    :Mark as ‚ä• (Bottom);
  endif
}

partition "Realization Phase" {
  :Parse ABox\n(Instance Assertions);

  :Compute Direct Types;
  note right
    For each individual:
    - Most specific classes
    - Avoid redundant types
  end note

  :Infer Property Assertions;
  note right
    - Object properties
    - Data properties
    - Inverse properties
  end note

  :Apply Property Chains;
}

partition "Materialization" {
  :Export Inferred Axioms;

  if (Include implicit axioms?) then (yes)
    :Add all subsumptions;
    :Add all type assertions;
  else (minimal)
    :Add direct relationships only;
  endif
}

:Save Classified Ontology;

stop

@enduml
