@prefix doc: <https://ggen.example.com/docs/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# ============================================================================
# GGEN DOCUMENTATION ONTOLOGY
#
# Source of truth for all ggen documentation.
# Edit this file, then run: ggen sync --config .specify/specs/999-docs-as-code/ggen.toml
# ============================================================================

# CLASSES
doc:Document a rdfs:Class ;
  rdfs:label "Document" ;
  rdfs:comment "Base documentation entity" .

doc:Tutorial a rdfs:Class ;
  rdfs:subClassOf doc:Document ;
  rdfs:label "Tutorial" ;
  rdfs:comment "Step-by-step learning (hands-on)" .

doc:HowTo a rdfs:Class ;
  rdfs:subClassOf doc:Document ;
  rdfs:label "How-To Guide" ;
  rdfs:comment "Problem-oriented (solve a specific problem)" .

doc:Reference a rdfs:Class ;
  rdfs:subClassOf doc:Document ;
  rdfs:label "Reference" ;
  rdfs:comment "Complete lookup documentation" .

doc:Explanation a rdfs:Class ;
  rdfs:subClassOf doc:Document ;
  rdfs:label "Explanation" ;
  rdfs:comment "Conceptual background and context" .

doc:Example a rdfs:Class ;
  rdfs:subClassOf doc:Document ;
  rdfs:label "Example" ;
  rdfs:comment "Working code example with walkthrough" .

doc:Gap a rdfs:Class ;
  rdfs:label "Documentation Gap" ;
  rdfs:comment "Missing or incomplete documentation" .

# PROPERTIES
doc:title a rdf:Property ;
  rdfs:domain doc:Document ;
  rdfs:range xsd:string ;
  rdfs:label "Title" .

doc:description a rdf:Property ;
  rdfs:domain doc:Document ;
  rdfs:range xsd:string ;
  rdfs:label "Short description" .

doc:summary a rdf:Property ;
  rdfs:domain doc:Document ;
  rdfs:range xsd:string ;
  rdfs:label "Longer summary" .

doc:estimatedMinutes a rdf:Property ;
  rdfs:domain doc:Document ;
  rdfs:range xsd:integer ;
  rdfs:label "Estimated reading/completion time" .

doc:difficulty a rdf:Property ;
  rdfs:domain doc:Document ;
  rdfs:range xsd:string ;
  rdfs:comment "Beginner, Intermediate, Advanced" .

doc:category a rdf:Property ;
  rdfs:domain doc:Document ;
  rdfs:range xsd:string ;
  rdfs:label "Documentation category" .

doc:prerequisite a rdf:Property ;
  rdfs:domain doc:Document ;
  rdfs:range xsd:string ;
  rdfs:label "Required knowledge/docs" .

doc:outputFile a rdf:Property ;
  rdfs:domain doc:Document ;
  rdfs:range xsd:string ;
  rdfs:label "Output markdown filename" .

doc:priority a rdf:Property ;
  rdfs:domain doc:Gap ;
  rdfs:range xsd:string ;
  rdfs:comment "P0, P1, P2, P3 (critical to nice-to-have)" .

doc:effort a rdf:Property ;
  rdfs:domain doc:Document ;
  rdfs:range xsd:string ;
  rdfs:comment "S, M, L, XL" .

doc:codeRefs a rdf:Property ;
  rdfs:domain doc:Document ;
  rdfs:range xsd:string ;
  rdfs:label "Source code references" .

