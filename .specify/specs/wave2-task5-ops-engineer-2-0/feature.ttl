# ============================================================================
# PILOT SCORECARD: METRICS FOR SUCCESS
# ============================================================================

:PilotScorecard a spec:PilotScorecard ;
    rdfs:label "Pilot Success Scorecard (3 volunteers, 1 week week 11)" ;
    spec:goal "Validate new role is working before scaling to 20" ;
    spec:pilots 3 ;
    spec:duration "1 week (week 11 parallel run)" ;
    spec:metrics (
        :Metric_ExceptionHandlingRate
        :Metric_Satisfaction
        :Metric_Escalations
        :Metric_IncidentResponse
        :Metric_Retention
    ) ;
    spec:passFailCriteria [
        spec:pass "ALL 5 metrics pass → scale to all 20" ;
        spec:fail "ANY metric fails → investigate before scaling" ;
        spec:conditional "If 3/5 pass + 2/5 close → short pivot + try again"
    ] .

:Metric_ExceptionHandlingRate a spec:Metric ;
    rdfs:label "Exception Handling Rate (Self-Sufficiency)" ;
    spec:target ">70%" ;
    spec:meaning "Pilots handle >70% of exceptions without escalation" ;
    spec:measure "Count: exceptions handled solo / total exceptions assigned" ;
    spec:why "If pilots escalate >30%, new role might be too complex or training is insufficient" ;
    spec:howToCalculate [
        spec:numerator "Exceptions pilot approved or denied independently" ;
        spec:denominator "Total exceptions assigned to pilot in week 11" ;
        spec:example "Pilot A: assigned 100 exceptions, handled 75 solo, escalated 25. Rate = 75%. PASS."
    ] ;
    spec:passFailThreshold ">70% = PASS, <=70% = FAIL" ;
    spec:corrective_ifFail "Increase mentorship + add extra training on escalation categories" .

:Metric_Satisfaction a spec:Metric ;
    rdfs:label "Pilot Satisfaction (Role Believability)" ;
    spec:target ">70%" ;
    spec:meaning "Pilots report >70% satisfaction: role is achievable, not overwhelming" ;
    spec:measure "Survey (Likert 1-5): 'This role feels achievable for me' + 'I'm confident in my decisions' + 'I see myself doing this long-term'" ;
    spec:why "If pilots don't feel confident, full team won't either. Satisfaction = buy-in." ;
    spec:survey [
        spec:q1 "This role feels achievable for me (not overwhelming)" ; spec:scale "1-5" ;
        spec:q2 "I'm confident in my exception decisions" ; spec:scale "1-5" ;
        spec:q3 "I see myself doing this role long-term" ; spec:scale "1-5" ;
        spec:q4 "My job is not being replaced (I'm valued)" ; spec:scale "1-5" ;
        spec:q5 "Training prepared me well" ; spec:scale "1-5"
    ] ;
    spec:passFailThreshold "Average >3.5/5 (70%+) = PASS" ;
    spec:corrective_ifFail "Identify specific concerns (job security, complexity, etc.) and address before scaling" .

:Metric_Escalations a spec:Metric ;
    rdfs:label "Escalation Quality (Sound Judgment)" ;
    spec:target "0%" ;
    spec:meaning "Zero escalations are reworked or overturned (pilot judgment is sound)" ;
    spec:measure "Count: escalations where manager/lead came back and said 'actually, you should have...'" ;
    spec:why "If pilot escalations are constantly reworked, that's a sign training is insufficient or process is unclear" ;
    spec:howToCalculate [
        spec:numerator "Escalations that required rework or override" ;
        spec:denominator "Total escalations from pilots" ;
        spec:example "Pilots escalated 25 exceptions. None were reworked. Rate = 0%. PASS."
    ] ;
    spec:passFailThreshold "0 reworks = PASS, >=1 rework = FAIL (investigate which training gap)" ;
    spec:corrective_ifFail "Mentor pilots on that category + run extra training session" .

:Metric_IncidentResponse a spec:Metric ;
    rdfs:label "Incident Response Time (Operational SLO)" ;
    spec:target "No degradation" ;
    spec:meaning "Incident response time not worse than old role (new role doesn't break ops)" ;
    spec:measure "Compare: avg incident detection-to-resolution in week 11 vs. historical avg" ;
    spec:why "If new role slows down incident response, SLO fails and ops team is unhappy" ;
    spec:slo "Detection to resolution: ≤30min for P1, ≤4hr for P2. Must maintain." ;
    spec:passFailThreshold "≤5% slower = PASS (acceptable variance), >5% slower = FAIL (new role is too distracting)" ;
    spec:corrective_ifFail "Pilots need more support during incidents (extra mentors) or exception handling needs streamlining" .

:Metric_Retention a spec:Metric ;
    rdfs:label "Retention (No Attrition Spike)" ;
    spec:target "100%" ;
    spec:meaning "All pilots remain employed (no one quits due to role change)" ;
    spec:measure "Count: pilots who resign or request transfer" ;
    spec:why "If role change causes attrition, that's a red flag for full team" ;
    spec:passFailThreshold "0 attrition = PASS, >=1 resignation = FAIL + investigate" ;
    spec:corrective_ifFail "Understand resignation reason (role too complex? Fear of replacement? Better offer elsewhere?)" .

