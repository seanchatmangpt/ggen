# ============================================================================
# FMEA: FAILURE MODE & EFFECTS ANALYSIS
# ============================================================================

:OpsEngineerFMEA a spec:FMEA ;
    rdfs:label "FMEA: Ops Engineer 2.0 Program Risks" ;
    spec:analysisDate "Week 8 pre-launch" ;
    spec:failureModes (
        :FM1_FeelsReplaced :FM2_TooComplex :FM3_OldProcessFaster
        :FM4_PilotFails :FM5_SkillsObsolete :FM6_CareerPathUnclear
    ) .

:FM1_FeelsReplaced a spec:FailureMode ;
    rdfs:label "Engineer feels replaced by automation (job security fear)" ;
    spec:description "Despite messaging, engineer worries automation will eliminate their role. Engagement drops. Attrition risk." ;
    spec:severity 9 ;
    spec:occurrence 6 ;
    spec:detection 7 ;
    spec:rpn 378 ;
    spec:mitigation (
        [ spec:type "PREVENT" ; spec:control "Module 1: Explicit framing: 'ggen does routine, you do exceptions (80%)'" ; spec:newRpn 189 ]
        [ spec:type "PREVENT" ; spec:control "Mentor 1-on-1: address fears explicitly, show personal career path forward" ]
        [ spec:type "DETECT" ; spec:control "Week 10 survey: ask directly 'Do you feel your job is secure?' - red flag if <3/5" ]
        [ spec:type "REACT" ; spec:control "If survey shows concern, emergency session with manager + career discussion" ]
    ) .

:FM2_TooComplex a spec:FailureMode ;
    rdfs:label "New role is too complex (exception handling overwhelming)" ;
    spec:description "80% exception handling, but engineer struggles to make decisions. Escalations spike. Confidence drops." ;
    spec:severity 8 ;
    spec:occurrence 5 ;
    spec:detection 8 ;
    spec:rpn 320 ;
    spec:mitigation (
        [ spec:type "PREVENT" ; spec:control "Module 2: Extensive practice (20 scenarios, live labs with mentor)" ; spec:newRpn 80 ]
        [ spec:type "PREVENT" ; spec:control "Start with simpler exceptions in week 11 (ease in gradually)" ]
        [ spec:type "DETECT" ; spec:control "Week 11 daily sync: if engineer escalating >30%, flag as struggling" ]
