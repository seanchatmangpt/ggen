:EngineerCohort_ClearedForPromotion a program:EngineerCohort ;
    rdfs:label "Cohort 1: High Performers Cleared for Promotion" ;
    rdfs:comment "Top-tier engineers ready for immediate advancement into senior/architect roles" ;
    program:cohortID "C1-HiPo" ;
    program:targetCount 80 ;
    program:criteria [
        rdf:type program:CohortCriterion ;
        program:dimension "Performance" ;
        program:requirement "Performance rating 4.0+ (top 15%)"
    ] ;
    program:criteria [
        rdf:type program:CohortCriterion ;
        program:dimension "Readiness" ;
        program:requirement "Manager confirms readiness for next level within 6 months"
    ] ;
    program:criteria [
        rdf:type program:CohortCriterion ;
        program:dimension "Retention" ;
        program:requirement "Retention risk: Low (no external offers, internal motivation)"
    ] ;
    program:expectedOutcome "50-60 promoted to Senior/Architect within 6 months (proof of concept)" ;
    program:retentionExpectation "98%+ (opportunity is powerful retention lever)" ;
    program:trainingRequired [
        rdf:type program:Training ;
        program:name "Senior Role Readiness" ;
        program:hours 4 ;
        program:content "Strategic thinking, mentoring skills, broader scope"
    ] ;
    program:communicationStrategy "Announce early and publicly - these are the proof points" ;
    program:riskMitigation "Fast-track 5-10 to promotions by Week 10 to demonstrate path is real" .

:EngineerCohort_ReadyForStability a program:EngineerCohort ;
    rdfs:label "Cohort 2: Core Stable Engineers (Long-term IC)" ;
    rdfs:comment "Solid performers who want to stay as individual contributors, non-managerial" ;
    program:cohortID "C2-Stable" ;
    program:targetCount 150 ;
    program:criteria [
        rdf:type program:CohortCriterion ;
        program:dimension "Performance" ;
        program:requirement "Performance rating 3.0-3.5 (solid, reliable)"
    ] ;
    program:criteria [
        rdf:type program:CohortCriterion ;
        program:dimension "Preference" ;
        program:requirement "Expressed preference for IC track, not people management"
    ] ;
    program:criteria [
        rdf:type program:CohortCriterion ;
        program:dimension "Stability" ;
        program:requirement "Tenure 3+ years, low flight risk"
    ] ;
    program:newRole "Senior Ops Engineer (IC3-IC4) or Ops Engineer (IC1-IC2) - promoted in place" ;
    program:expectedOutcome "Compensation increase (10-15%), expanded authority, same team" ;
    program:retentionExpectation "95%+ (comp increase + autonomy + no forced management)" ;
    program:riskMitigation "Clear messaging: 'You don't have to manage people to advance or earn well - IC path is valued'" ;
    program:trainingRequired [
        rdf:type program:Training ;
        program:name "Expanded Process Authority" ;
        program:hours 2 ;
        program:content "How to make decisions autonomously within process frameworks"
    ] ;
    program:communicationStrategy "Celebrate 'we value expert individual contributors' (defuse promotion anxiety)" .

:EngineerCohort_AttritionAccounted a program:EngineerCohort ;
    rdfs:label "Cohort 3: Attrition-Accounted (Expected Natural Attrition)" ;
    rdfs:comment "Segment expected to leave org during transition (baseline attrition projected)" ;
    program:cohortID "C3-Attrition" ;
    program:targetCount 30 ;
    program:rationale "At 8% annual attrition over 6 months = 4% = ~32 engineers expected to leave naturally" ;
    program:baselineAttrition "4% over 6 months"^^xsd:string ;
    program:criteria [
        rdf:type program:CohortCriterion ;
        program:dimension "Risk" ;
        program:requirement "Retention risk flagged by manager (external job search, reduced engagement)"
    ] ;
    program:criteria [
        rdf:type program:CohortCriterion ;
        program:dimension "Tenure" ;
        program:requirement "Often newer engineers (6-18 months) or those with limited advancement"
    ] ;
    program:strategy "Don't invest heavily in retention - focus resources on C1 and C2 instead" ;
    program:communicationStrategy "Low-touch; not targeted for special development" ;
    program:expectedOutcome "10-15 voluntary departures (acceptable, baseline-aligned)" ;
    program:targetOutcome "Attrition stays ≤5%, NOT exceeding baseline + 2%" .

:EngineerCohort_RequiringIntervention a program:EngineerCohort ;
    rdfs:label "Cohort 4: Requiring Active Intervention (Flight Risk)" ;
    rdfs:comment "High-value engineers who may leave; need active retention campaign" ;
    program:cohortID "C4-Intervention" ;
    program:targetCount 40 ;
    program:criteria [
        rdf:type program:CohortCriterion ;
        program:dimension "Value" ;
        program:requirement "High performers (3.5+) OR critical skill holders"
    ] ;
    program:criteria [
        rdf:type program:CohortCriterion ;
        program:dimension "Risk" ;
