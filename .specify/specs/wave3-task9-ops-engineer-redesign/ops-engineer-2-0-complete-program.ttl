        program:type "Executive Mentoring" ;
        program:description "Pair with Ops Architect or Lead for career counseling" ;
        program:frequency "Monthly, 1:1 sessions"
    ] ;
    program:interventions [
        rdf:type program:RetentionIntervention ;
        program:type "Accelerated Promotion Consideration" ;
        program:description "Front-line candidates for Week 10 promotion announcements" ;
        program:timing "Announce by Week 9 to retain"
    ] ;
    program:interventions [
        rdf:type program:RetentionIntervention ;
        program:type "Stretch Assignment" ;
        program:description "High-profile project or leadership opportunity" ;
        program:duration "3-6 months"
    ] ;
    program:interventions [
        rdf:type program:RetentionIntervention ;
        program:type "Compensation Review" ;
        program:description "Market adjustment or retention bonus if needed" ;
        program:triggers "If external offer received or resignation risk spiked"
    ] ;
    program:expectedOutcome "90%+ retention (vs 80% baseline for this cohort)" ;
    program:successCriteria "Zero resignations in this cohort through Week 16" .

