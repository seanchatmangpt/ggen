# ============================================================================
# AUTHORITY MODEL: NEW MANAGER PARADIGM
# ============================================================================

:AuthorityModel_OldTaskAssignment a process:AuthorityModel ;
    rdfs:label "OLD: Task Assignment Model" ;
    rdfs:comment "Manager assigns daily/weekly tasks, enforces execution, limited autonomy" ;
    process:decisions [
        rdf:type process:DecisionType ;
        process:name "What to do" ;
        process:authority "Manager"
    ] ;
    process:decisions [
        rdf:type process:DecisionType ;
        process:name "How to do it" ;
        process:authority "Manager"
    ] ;
    process:decisions [
        rdf:type process:DecisionType ;
        process:name "When to escalate" ;
        process:authority "Manager"
    ] ;
    process:consequence "Engineers become executors, limited growth, manager bottleneck" .

:AuthorityModel_NewProcessArchitecture a process:AuthorityModel ;
    rdfs:label "NEW: Process Architecture Model" ;
    rdfs:comment "Manager owns team health/career; engineers own process execution within frameworks" ;
    process:decisions [
        rdf:type process:DecisionType ;
        process:name "What to do (Process Design)" ;
        process:authority "Senior Ops Engineer / Architect / Process Manager (collaborative)"
    ] ;
    process:decisions [
        rdf:type process:DecisionType ;
        process:name "How to execute (Variation within Process)" ;
        process:authority "Ops Engineer (autonomous within approved framework)"
    ] ;
    process:decisions [
        rdf:type process:DecisionType ;
        process:name "When to escalate (Incident Thresholds)" ;
        process:authority "Ops Engineer (defined escalation rules, not manager gate)"
    ] ;
    process:decisions [
        rdf:type process:DecisionType ;
        process:name "Career Development (Paths and Timing)" ;
        process:authority "Manager (with Senior/Architect input)"
    ] ;
    process:decisions [
        rdf:type process:DecisionType ;
        process:name "Tool Selection (within domain)" ;
        process:authority "Senior Ops Engineer (with Architect approval)"
    ] ;
    process:consequence "Engineers grow autonomy rapidly, managers focus on retention/development, sustainable scaling" .

:ManagerRole_Transformation a org:RoleTransformation ;
    rdfs:label "Manager Role Transformation (Key to Acceptance)" ;
    rdfs:comment "FROM task assignment and execution oversight TO career architect and team builder" ;
    org:oldResponsibilities (
        "Assign daily/weekly work tasks"
        "Monitor task completion"
        "Approve all process decisions"
        "Escalate operational issues"
