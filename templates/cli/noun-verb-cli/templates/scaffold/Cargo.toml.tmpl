---
to: "{{ project_name }}/Cargo.toml"
vars:
  project_name: "my-cli"
  version: "0.1.0"
  description: "A noun-verb CLI application"
  authors: ["Your Name <your.email@example.com>"]
---
[package]
name = "{{ project_name }}"
version = "{{ version }}"
edition = "2021"
authors = {{ authors }}
description = "{{ description }}"

[dependencies]
clap = { version = "4.5", features = ["derive", "env", "wrap_help"] }
tokio = { version = "1.38", features = ["full"] }
anyhow = "1.0"
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"

[dev-dependencies]
assert_cmd = "2"
assert_fs = "1"
predicates = "3"
tempfile = "3"

[[bin]]
name = "{{ project_name }}"
path = "src/main.rs"
