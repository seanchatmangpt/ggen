use clap::Parser;
use crate::CommandResult;

/// Store command for noun-verb CLI
#[derive(Parser, Debug)]
#[command(name = "Store_LOWER")]
#[command(about = "Store operations")]
pub struct StoreCommand {
    /// The action to perform
    #[arg(value_name = "ACTION")]
    pub action: String,

    /// Additional arguments
    #[arg(trailing_var_arg = true, allow_hyphen_values = true)]
    pub args: Vec<String>,
}

impl StoreCommand {
    /// Execute the Store command
    pub async fn execute(&self) -> CommandResult<String> {
        match self.action.as_str() {
            "create" => self.create().await,
            "read" | "get" => self.read().await,
            "update" => self.update().await,
            "delete" | "remove" => self.delete().await,
            "list" => self.list().await,
