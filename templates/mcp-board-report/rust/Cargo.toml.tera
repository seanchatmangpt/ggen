[package]
name = "mcp_nif"
version = "1.0.0"
edition = "2021"
authors = ["MCP+ Team"]
description = "Cryptographic NIF library for MCP+ Board Report Generation"
license = "Apache-2.0"
rust-version = "1.75"

[lib]
name = "mcp_nif"
crate-type = ["cdylib"]

[dependencies]
# Erlang NIF bindings
rustler = { version = "0.31", features = ["derive"] }

# Cryptographic primitives
sha2 = "0.10"
sha3 = "0.10"
ed25519-dalek = { version = "2.1", features = ["rand_core"] }
rand = "0.8"
rand_chacha = "0.3"

# Serialization
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
bincode = "1.3"

# Error handling
thiserror = "1.0"

# Time
chrono = { version = "0.4", features = ["serde"] }

# UUID generation (v7 for time-ordered)
uuid = { version = "1.6", features = ["v7", "serde"] }

# Merkle tree
merkle-tree-rs = "0.1"

# Hex encoding
hex = "0.4"

# Base64 encoding
base64 = "0.21"

[dev-dependencies]
proptest = "1.4"
criterion = "0.5"

[profile.release]
opt-level = 3
lto = true
codegen-units = 1
panic = "abort"

[profile.release.build-override]
opt-level = 3

[[bench]]
name = "crypto_bench"
harness = false

[features]
default = []
# Enable additional security features
strict = []
# Enable HSM integration (requires vendor SDK)
hsm = []
