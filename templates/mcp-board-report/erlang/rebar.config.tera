{erl_opts, [
    debug_info,
    warnings_as_errors,
    {parse_transform, lager_transform}
]}.

{deps, [
    {lager, "3.9.2"},
    {jsx, "3.1.0"},
    {uuid, "2.0.6", {pkg, uuid_erl}}
]}.

{project_plugins, [
    rebar3_rustler
]}.

%% Rustler NIF configuration
{rustler_crates, [
    {mcp_nif, [
        {path, "native/mcp_nif"},
        {mode, release}
    ]}
]}.

%% Release configuration
{relx, [
    {release, {mcp, "1.0.0"}, [
        mcp,
        sasl,
        lager,
        jsx
    ]},

    {mode, prod},
    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},

    {extended_start_script, true},
    {include_erts, true},

    %% Include priv directory with NIF libraries
    {overlay, [
        {copy, "priv", "priv"}
    ]}
]}.

%% Profiles
{profiles, [
    {prod, [
        {erl_opts, [no_debug_info]},
        {relx, [{mode, prod}]}
    ]},

    {dev, [
        {erl_opts, [debug_info]},
        {relx, [{mode, dev}]}
    ]},

    {test, [
        {erl_opts, [debug_info, export_all]},
        {deps, [
            {meck, "0.9.2"},
            {proper, "1.4.0"}
        ]}
    ]}
]}.

%% Dialyzer configuration
{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        race_conditions,
        underspecs
    ]},
    {plt_apps, top_level_deps},
    {plt_extra_apps, [crypto, ssl, public_key]}
]}.

%% XRef configuration
{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

%% Cover configuration
{cover_enabled, true}.
{cover_opts, [verbose]}.

%% Shell configuration
{shell, [
    {apps, [mcp]}
]}.

%% Alias commands
{alias, [
    {check, [xref, dialyzer, {ct, "--cover"}, cover]},
    {build_nif, [{rustler, build}]}
]}.
