---
to: "components/{{component_name}}.vue"
vars:
  component_name: "PackageCard"
rdf:
  - "graphs/marketplace-project.ttl"
  - "graphs/nuxt-ontology.ttl"
sparql:
  - |
    SELECT ?name ?template ?script ?style ?props ?emits
    WHERE {
      ?component a nuxt:Component ;
                 nuxt:name "{{component_name}}" ;
                 nuxt:template ?template ;
                 nuxt:script ?script .
      OPTIONAL { ?component nuxt:style ?style }
      OPTIONAL { ?component nuxt:hasProps ?props }
      OPTIONAL { ?component nuxt:emits ?emits }
    }
determinism:
  seed: "nuxt-component-{{component_name}}"
---
<script setup lang="ts">
{{ sparql_results.script }}
</script>

<template>
{{ sparql_results.template }}
</template>

{% if sparql_results.style %}
<style scoped>
{{ sparql_results.style }}
</style>
{% endif %}
