  "env": {
    "RUST_VERSION": "1.91.1",
    "CARGO_MAKE_REQUIRED": "true",
    "RNG_SEED": "42",
    "RUST_BACKTRACE": "1",
    "CARGO_TERM_COLOR": "always",
    "ANDON_MONITORING": "true",
    "CHICAGO_TDD": "true",
    "DFLSS_MODE": "true",
    "RDF_SOURCE_OF_TRUTH": ".specify",
    "TEST_COVERAGE_TARGET": "80",
    "SLO_FIRST_BUILD_MAX": "15s",
    "SLO_INCREMENTAL_MAX": "2s",
    "SLO_RDF_PROCESSING_MAX": "5s",
    "SLO_GENERATION_MEMORY_MAX": "100MB",
    "SLO_CLI_SCAFFOLDING_MAX": "3s"
  },
  "buildSystem": {
    "primary": "cargo make",
    "commands": {
      "check": "cargo make check",
      "test": "cargo make test",
      "testUnit": "cargo make test-unit",
      "lint": "cargo make lint",
      "preCommit": "cargo make pre-commit",
      "ci": "cargo make ci",
      "sloCheck": "cargo make slo-check",
      "audit": "cargo make audit",
      "bench": "cargo make bench",
      "speckitValidate": "cargo make speckit-validate",
      "speckitRender": "cargo make speckit-render",
      "timeoutCheck": "cargo make timeout-check"
    },
    "andonSignals": {
      "critical": ["error[E", "test ... FAILED"],
      "high": ["warning:", "clippy::"],
      "action": "STOP_THE_LINE"
    }
  },
  "testingStrategy": {
    "methodology": "Chicago TDD",
    "principles": [
      "State-based verification",
      "Real collaborators",
      "Behavior verification",
      "AAA pattern (Arrange/Act/Assert)"
    ],
    "types": [
      "unit",
      "integration",
      "bdd-cucumber",
      "property-proptest",
      "snapshot-insta",
      "security",
      "determinism",
      "performance-criterion"
    ],
    "coverageTarget": 80,
    "prohibitedInProduction": ["unwrap()", "expect()", "unimplemented!()", "todo!()"]
  },
  "rdfPipeline": {
    "stages": [
      "μ₁-normalize",
      "μ₂-extract",
      "μ₃-emit",
      "μ₄-canonicalize",
      "μ₅-receipt"
    ],
    "sourceOfTruth": ".specify/**/*.ttl",
    "validationCommand": "cargo make speckit-validate",
    "renderCommand": "cargo make speckit-render"
  },
  "qualityGates": {
    "requiredBeforeCompletion": [
      "cargo make check",
      "cargo make test",
      "cargo make lint",
      "cargo make slo-check"
    ],
    "optional": [
      "cargo make audit",
      "cargo make bench"
    ]
  },
  "codeStandards": {
    "rustEdition": "2021",
    "principles": [
      "Type-first design",
      "Zero-cost abstractions",
      "Memory safety via ownership",
      "Result<T,E> over panics",
      "Ergonomic APIs"
    ],
    "prohibitedPatterns": [
      "Direct cargo commands",
      "Commands without timeout wrappers",
      "Ignoring Andon signals",
      "Placeholders in production code",
      "TODO comments (use FUTURE: prefix)",
      "print!/println! in libraries (use log! macros)",
      "Saving files to root folder"
    ]
  },
  "workspaceStructure": {
    "totalCrates": 30,
    "coreCrates": [
      "ggen-core",
      "ggen-cli",
      "ggen-domain",
      "ggen-utils",
      "ggen-config",
      "ggen-macros",
      "ggen-node",
      "ggen-dod"
    ],
    "directories": {
      "source": "crates/*/src/",
      "tests": "crates/*/tests/",
      "workspaceTests": "tests/",
      "docs": "docs/",
      "scripts": "scripts/",
      "examples": "examples/",
      "benches": "benches/",
      "specs": ".specify/",
      "config": ".claude/"
    }
  },
  "epic9": {
    "name": "Big Bang 80/20",
    "triggers": [
      "Non-trivial: 5+ files or 3+ systems",
      "Multiple valid approaches",
      "Large architectural decisions",
      "Unclear requirements",
      "Unknown unknowns"
    ],
    "workflow": [
      "Spec Closure (100% TTL)",
      "Fan-Out (10 parallel agents)",
      "Collision Detection",
      "Convergence",
      "Refactoring",
      "Cryptographic Receipt"
    ]
  }
}
