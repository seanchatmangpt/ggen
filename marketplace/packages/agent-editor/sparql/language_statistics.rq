PREFIX ed: <http://ggen.io/ontology/editor#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>

# Query: Get language usage statistics
SELECT ?language (COUNT(?operation) AS ?operationCount)
WHERE {
  ?editor a ed:CodeEditor ;
          ed:hasLanguage ?lang ;
          ed:performsOperation ?operation .

  ?lang rdfs:label ?language .
}
GROUP BY ?language
ORDER BY DESC(?operationCount)
