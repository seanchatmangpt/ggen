    rdfs:label "Life Insurance" ;
    rdfs:comment "Life insurance coverage" .

hr:Enrollment a owl:Class ;
    rdfs:label "Enrollment" ;
    rdfs:comment "Benefits enrollment" .

# Training & Development
hr:Training a owl:Class ;
    rdfs:label "Training" ;
    rdfs:comment "Training program" .

hr:Certification a owl:Class ;
    rdfs:label "Certification" ;
    rdfs:comment "Professional certification" .

hr:Course a owl:Class ;
    rdfs:label "Course" ;
    rdfs:comment "Training course" .

hr:SkillSet a owl:Class ;
    rdfs:label "Skill Set" ;
    rdfs:comment "Collection of skills" .

# Compliance
hr:ComplianceRecord a owl:Class ;
    rdfs:label "Compliance Record" ;
    rdfs:comment "HR compliance documentation" .

hr:PolicyAcknowledgment a owl:Class ;
    rdfs:label "Policy Acknowledgment" ;
    rdfs:comment "Employee policy acceptance" .

# ============================================================================
# PROPERTIES
# ============================================================================

# Employee Properties
hr:employeeId a owl:DatatypeProperty ;
    rdfs:domain hr:Employee ;
    rdfs:range xsd:string ;
    rdfs:label "employee ID" .

hr:hireDate a owl:DatatypeProperty ;
    rdfs:domain hr:Employee ;
    rdfs:range xsd:date ;
    rdfs:label "hire date" .

hr:terminationDate a owl:DatatypeProperty ;
    rdfs:domain hr:Employee ;
    rdfs:range xsd:date ;
    rdfs:label "termination date" .

hr:employmentStatus a owl:DatatypeProperty ;
