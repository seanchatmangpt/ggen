@prefix hr: <https://ggen.ai/ontology/hr-management#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

# Ontology Definition
hr: a owl:Ontology ;
    dcterms:title "Human Resources Management Ontology" ;
    dcterms:description "Ontology for HR management with recruitment, performance, payroll, and benefits" ;
    dcterms:created "2025-01-08"^^xsd:date ;
    owl:versionInfo "1.0.0" .

# ============================================================================
# CORE CLASSES
# ============================================================================

# Employee Classes
hr:Employee a owl:Class ;
    rdfs:subClassOf foaf:Person ;
    rdfs:label "Employee" ;
    rdfs:comment "Person employed by the organization" .

hr:FullTimeEmployee a owl:Class ;
    rdfs:subClassOf hr:Employee ;
    rdfs:label "Full-Time Employee" ;
    rdfs:comment "Full-time employed person" .

hr:PartTimeEmployee a owl:Class ;
    rdfs:subClassOf hr:Employee ;
    rdfs:label "Part-Time Employee" ;
    rdfs:comment "Part-time employed person" .

hr:Contractor a owl:Class ;
    rdfs:subClassOf hr:Employee ;
    rdfs:label "Contractor" ;
    rdfs:comment "Contract worker" .

hr:Intern a owl:Class ;
    rdfs:subClassOf hr:Employee ;
    rdfs:label "Intern" ;
    rdfs:comment "Internship employee" .

# Organization Structure
hr:Department a owl:Class ;
    rdfs:label "Department" ;
    rdfs:comment "Organizational department" .

hr:Team a owl:Class ;
    rdfs:label "Team" ;
    rdfs:comment "Work team within organization" .

hr:Position a owl:Class ;
    rdfs:label "Position" ;
    rdfs:comment "Job position or role" .

hr:JobLevel a owl:Class ;
    rdfs:label "Job Level" ;
    rdfs:comment "Job level or grade" .

hr:OrganizationChart a owl:Class ;
    rdfs:label "Organization Chart" ;
    rdfs:comment "Hierarchical organization structure" .

# Recruitment
hr:JobPosting a owl:Class ;
    rdfs:label "Job Posting" ;
    rdfs:comment "Published job opening" .

hr:Applicant a owl:Class ;
    rdfs:label "Applicant" ;
    rdfs:comment "Job applicant" .

hr:Application a owl:Class ;
    rdfs:label "Application" ;
    rdfs:comment "Job application" .

hr:Interview a owl:Class ;
    rdfs:label "Interview" ;
    rdfs:comment "Job interview" .

hr:Offer a owl:Class ;
    rdfs:label "Offer" ;
    rdfs:comment "Job offer" .

hr:Onboarding a owl:Class ;
    rdfs:label "Onboarding" ;
    rdfs:comment "Employee onboarding process" .

# Performance Management
hr:PerformanceReview a owl:Class ;
    rdfs:label "Performance Review" ;
    rdfs:comment "Employee performance evaluation" .

hr:Goal a owl:Class ;
    rdfs:label "Goal" ;
    rdfs:comment "Performance goal or objective" .

hr:KeyPerformanceIndicator a owl:Class ;
    rdfs:label "KPI" ;
    rdfs:comment "Key performance indicator" .

hr:Competency a owl:Class ;
    rdfs:label "Competency" ;
    rdfs:comment "Skill or competency" .

hr:Feedback a owl:Class ;
    rdfs:label "Feedback" ;
    rdfs:comment "Performance feedback" .

hr:DevelopmentPlan a owl:Class ;
    rdfs:label "Development Plan" ;
    rdfs:comment "Employee development plan" .

# Time & Attendance
hr:Attendance a owl:Class ;
    rdfs:label "Attendance" ;
    rdfs:comment "Attendance record" .

hr:TimeSheet a owl:Class ;
    rdfs:label "Time Sheet" ;
    rdfs:comment "Time tracking sheet" .

hr:Leave a owl:Class ;
    rdfs:label "Leave" ;
    rdfs:comment "Employee leave or absence" .

hr:Vacation a owl:Class ;
    rdfs:subClassOf hr:Leave ;
    rdfs:label "Vacation" ;
    rdfs:comment "Vacation leave" .

hr:SickLeave a owl:Class ;
    rdfs:subClassOf hr:Leave ;
    rdfs:label "Sick Leave" ;
    rdfs:comment "Medical leave" .

hr:PersonalLeave a owl:Class ;
    rdfs:subClassOf hr:Leave ;
    rdfs:label "Personal Leave" ;
    rdfs:comment "Personal time off" .

hr:WorkSchedule a owl:Class ;
    rdfs:label "Work Schedule" ;
    rdfs:comment "Employee work schedule" .

# Payroll
hr:Payroll a owl:Class ;
    rdfs:label "Payroll" ;
    rdfs:comment "Payroll processing" .

hr:Salary a owl:Class ;
    rdfs:label "Salary" ;
    rdfs:comment "Employee salary" .

hr:Bonus a owl:Class ;
    rdfs:label "Bonus" ;
    rdfs:comment "Performance bonus" .

hr:Deduction a owl:Class ;
    rdfs:label "Deduction" ;
    rdfs:comment "Payroll deduction" .

hr:Payslip a owl:Class ;
    rdfs:label "Payslip" ;
    rdfs:comment "Salary payment slip" .

hr:TaxWithholding a owl:Class ;
    rdfs:label "Tax Withholding" ;
    rdfs:comment "Tax deduction" .

# Benefits
hr:BenefitsPlan a owl:Class ;
    rdfs:label "Benefits Plan" ;
    rdfs:comment "Employee benefits plan" .

hr:HealthInsurance a owl:Class ;
