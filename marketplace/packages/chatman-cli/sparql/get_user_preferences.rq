PREFIX chatman: <http://ggen.ai/ontology/chatman#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>

# Get user preferences and configuration
SELECT ?user ?provider ?model ?maxHistory ?timeout
WHERE {
    ?session a chatman:Session ;
             chatman:hasParticipant ?user ;
             chatman:hasConfiguration ?config .
    
    ?config chatman:usesProvider ?provider ;
            chatman:hasModel ?model ;
            chatman:hasMaxHistory ?maxHistory ;
            chatman:hasTimeout ?timeout .
    
    ?user a chatman:User .
}
