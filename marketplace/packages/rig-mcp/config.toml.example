# Rig + MCP Integration Configuration
# Copy this to config.toml and fill in your API keys

# API Keys (optional - will use environment variables if not set)
deepseek_key = ""  # Or set DEEPSEEK_API_KEY environment variable
cohere_key = ""    # Or set COHERE_API_KEY environment variable
openai_key = ""    # Or set OPENAI_API_KEY environment variable
anthropic_key = "" # Or set ANTHROPIC_API_KEY environment variable

[mcp]

# Example: Filesystem MCP server
[[mcp.server]]
name = "filesystem"
protocol = "stdio"
command = "npx"
args = ["@modelcontextprotocol/server-filesystem", "/path/to/allowed/files"]

# Example: Git MCP server
[[mcp.server]]
name = "git"
protocol = "stdio"
command = "uvx"
args = ["mcp-server-git"]

# Example: GitHub MCP server
[[mcp.server]]
name = "github"
protocol = "stdio"
command = "npx"
args = ["@modelcontextprotocol/server-github"]

[mcp.server.envs]
GITHUB_PERSONAL_ACCESS_TOKEN = "ghp_..."

# Example: SSE transport server
# [[mcp.server]]
# name = "my-sse-server"
# protocol = "sse"
# url = "http://localhost:3000/sse"

# Example: HTTP streamable transport
# [[mcp.server]]
# name = "my-http-server"
# protocol = "streamable"
# url = "http://localhost:3000/mcp"
