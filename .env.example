# Environment Configuration Example
# Copy to .env and fill in values from GCP Secret Manager
# NEVER commit .env file with actual secrets

# ============================================================================
# GitHub Configuration
# ============================================================================
# GitHub Personal Access Token (required for CI/CD workflows)
# Set in: GCP Secret Manager > github-token
# Scopes: repo, workflow, admin:org_hook
GITHUB_TOKEN=<set in GCP Secret Manager>

# ============================================================================
# GCP Configuration
# ============================================================================
# GCP Project ID
GCP_PROJECT_ID=taiea-v1

# GCP Region
GCP_REGION=us-central1

# GCP Zone
GCP_ZONE=us-central1-a

# GCP Service Account Key (base64 encoded JSON)
# Set in: GCP Secret Manager > gcp-service-account-key
GCP_SERVICE_ACCOUNT_KEY=<set in GCP Secret Manager>

# ============================================================================
# TAI Autonomics Configuration
# ============================================================================
# Environment name
TAIEA_ENV=production

# Log level (debug, info, warn, error)
TAIEA_LOG_LEVEL=info

# Port for Cloud Run service
PORT=8080

# ============================================================================
# Firestore Configuration
# ============================================================================
# Firestore Database URL
# Set in: GCP Secret Manager > firestore-url
FIRESTORE_URL=<set in GCP Secret Manager>

# Firestore Database Connection String
# Set in: GCP Secret Manager > database-connection-string
DATABASE_CONNECTION_STRING=<set in GCP Secret Manager>

# Enable Firestore integration
FIRESTORE_ENABLED=true

# ============================================================================
# Docker & Container Registry
# ============================================================================
# Docker Registry Token (for pulling/pushing images)
# Set in: GCP Secret Manager > docker-registry-token
DOCKER_REGISTRY_TOKEN=<set in GCP Secret Manager>

# Container image tag
IMAGE_TAG=latest

# ============================================================================
# Pub/Sub Configuration
# ============================================================================
# Pub/Sub subscription name
PUBSUB_SUBSCRIPTION=erlang-autonomics-signals-sub

# Pub/Sub topic name
PUBSUB_TOPIC=erlang-autonomics-signals

# ============================================================================
# Erlang Configuration
# ============================================================================
# Erlang cookie (for node distribution)
# Set in: GCP Secret Manager > erlang-cookie
ERLANG_COOKIE=<set in GCP Secret Manager>

# Erlang node name
ERLANG_NODE_NAME=tai_autonomics

# ============================================================================
# API Configuration
# ============================================================================
# Internal API Key
# Set in: GCP Secret Manager > internal-api-key
INTERNAL_API_KEY=<set in GCP Secret Manager>

# API host for services
API_HOST=tai-autonomics.example.com

# ============================================================================
# TLS/HTTPS Configuration
# ============================================================================
# TLS Certificate (PEM format)
# Set in: GCP Secret Manager > tls-certificate
TLS_CERTIFICATE=<set in GCP Secret Manager>

# TLS Private Key (PEM format)
# Set in: GCP Secret Manager > tls-private-key
TLS_PRIVATE_KEY=<set in GCP Secret Manager>

# ============================================================================
# Observability Configuration
# ============================================================================
# OpenTelemetry tracing enabled
TRACING_ENABLED=true

# Metrics collection interval (milliseconds)
METRICS_COLLECTION_INTERVAL_MS=10000

# ============================================================================
# Slack Integration (Notifications)
# ============================================================================
# Slack Webhook URL (for deployment notifications)
# Set in: GCP Secret Manager > slack-webhook-url
SLACK_WEBHOOK_URL=<set in GCP Secret Manager>

# Slack channel for alerts
SLACK_ALERT_CHANNEL=#tai-alerts

# ============================================================================
# Cloud Build Configuration
# ============================================================================
# Artifact Registry location
ARTIFACT_REGISTRY_LOCATION=us-central1

# Artifact Registry repository ID
ARTIFACT_REGISTRY_REPO=tai-autonomics

# ============================================================================
# Monitoring Configuration
# ============================================================================
# Receipt ledger backend (firestore, in_memory, file)
RECEIPT_LEDGER_BACKEND=firestore

# Alert notification channels (comma-separated email list)
ALERT_NOTIFICATION_CHANNELS=ops@tai-autonomics.com

# ============================================================================
# Development Settings (DO NOT USE IN PRODUCTION)
# ============================================================================
# Debug mode
DEBUG=false

# Database logging
DATABASE_LOG=false

# Request/Response logging
HTTP_LOG=false

# ============================================================================
# Notes
# ============================================================================
# 1. GITHUB_TOKEN: Required for GitHub Actions workflows
#    Generate at: https://github.com/settings/tokens
#    Scopes: repo, workflow, admin:org_hook
#
# 2. GCP_SERVICE_ACCOUNT_KEY: Base64-encoded JSON key file
#    Generate via: gcloud iam service-accounts keys create key.json
#    Encode: cat key.json | base64 > key.json.b64
#
# 3. ERLANG_COOKIE: Must be identical on all Erlang nodes
#    Generate: openssl rand -base64 32
#
# 4. All secrets should be stored in GCP Secret Manager
#    Retrieve via: gcloud secrets versions access latest --secret="secret-name"
#
# 5. CI/CD systems should inject secrets from Secret Manager
#    See SECRETS_MANAGEMENT.md for detailed instructions
