PREFIX rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX ddd:  <https://ggen.io/ontology/ddd#>

SELECT ?entityName ?fieldName ?fieldType ?required ?comment
WHERE {
  # Find routing-related entities
  VALUES ?entity {
    <https://ggen.io/examples/attribution#AffiliateLinkRoute>
    <https://ggen.io/examples/attribution#ClickReceipt>
  }

  ?entity a ddd:Entity ;
          ddd:name ?entityName ;
          ddd:hasField ?field .

  ?field ddd:name ?fieldName ;
         ddd:type ?fieldType ;
         ddd:required ?required .

  OPTIONAL { ?field rdfs:comment ?comment }
}
ORDER BY ?entityName ?fieldName
