PREFIX rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX ddd:  <https://ggen.io/ontology/ddd#>

SELECT ?contextName ?aggregateName ?projectionName
WHERE {
  # Find the bounded context
  ?context a ddd:BoundedContext ;
           ddd:name ?contextName .

  # Find aggregates (write model)
  OPTIONAL {
    ?context ddd:hasAggregate ?aggregate .
    ?aggregate ddd:name ?aggregateName .
  }

  # Find projections (read model)
  OPTIONAL {
    ?context ddd:hasProjection ?projection .
    ?projection ddd:name ?projectionName .
  }
}
