  "links": [],
  "panels": [
    {
      "datasource": "Prometheus",
      "description": "Circuit breaker state transition over time. Closed=OK, Open=Failures detected, Half-Open=Testing recovery",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "State",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 30,
            "gradientMode": "none",
            "hideFrom": {
              "tooltip": false,
              "viz": false,
              "legend": false
            },
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "pointSize": 8,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "always",
            "spanNulls": true,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "Closed",
                  "color": "green"
                },
                "1": {
                  "text": "Open",
                  "color": "red"
                },
                "2": {
                  "text": "Half-Open",
                  "color": "yellow"
                }
              },
              "type": "value"
            }
          ],
          "max": 2,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "options": {
        "legend": {
          "calcs": ["mean"],
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      },
      "pluginVersion": "8.0.0",
      "targets": [
        {
          "expr": "tps_jidoka_circuit_state",
          "legendFormat": "{{component}}",
          "refId": "A"
        }
      ],
      "title": "Circuit Breaker State (0=Closed, 1=Open, 2=Half-Open)",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
