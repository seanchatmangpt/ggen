# TPS Reference System Configuration

# Service Ports
HTTP_PORT=8080
METRICS_PORT=9090

# TPS Configuration
TPS_NUM_WORKERS=4
TPS_CB_THRESHOLD=5
TPS_CB_TIMEOUT=30
TPS_KANBAN_BUFFER=1000
TPS_ANDON_HISTORY=100
TPS_HEIJUNKA_POOL=4

# Message Queues
NATS_URL=nats://nats:4222
