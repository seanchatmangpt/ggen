{erl_opts, [
    debug_info,
    warn_missing_spec,
    warn_unused_vars,
    warnings_as_errors
]}.

{dialyzer, [
    {warnings, [
        underspecs,
        overspecs,
        specdiffs
    ]},
    {get_warnings, true},
    {plt_apps, [erts, kernel, stdlib]},
    {base_plt_apps, [erts, kernel, stdlib]}
]}.

{profiles, [
    {test, [
        {erl_opts, [debug_info]}
    ]},
    {dev, [
        {erl_opts, [debug_info]}
    ]}
]}.
