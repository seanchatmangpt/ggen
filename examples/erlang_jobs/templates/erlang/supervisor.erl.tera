%% @doc {{ description | default(value="Supervisor implementation") }}
%% Generated from RDF ontology
-module({{ module_name }}).
-behaviour(supervisor).

%% API
-export([start_link/0]).

%% Supervisor callbacks
-export([init/1]).

-define(SERVER, ?MODULE).

%%%===================================================================
%%% API functions
%%%===================================================================

%% @doc Starts the supervisor
-spec start_link() -> {ok, pid()} | ignore | {error, term()}.
start_link() ->
    supervisor:start_link({local, ?SERVER}, ?MODULE, []).

%%%===================================================================
%%% Supervisor callbacks
%%%===================================================================

%% @private
%% @doc Whenever a supervisor is started using supervisor:start_link/[2,3],
%% this function is called by the new process to find out about restart strategy,
%% maximum restart intensity, and child specifications.
-spec init(Args :: term()) ->
    {ok, {SupFlags :: supervisor:sup_flags(), [ChildSpec :: supervisor:child_spec()]}} | ignore.
init([]) ->
    SupFlags = #{
        strategy => {{ restart_strategy | default(value="one_for_one") }},
        intensity => {{ intensity | default(value="5") }},
        period => {{ period | default(value="10") }}
    },

    ChildSpecs = [
        {%- for child in children %}
        #{
            id => {{ child.id }},
            start => { {{ child.module }}, start_link, {{ child.args | default(value="[]") }} },
            restart => permanent,
            shutdown => 5000,
            type => {{ child.type | default(value="worker") }},
            modules => [{{ child.module }}]
        }{{ "," if not loop.last else "" }}
        {%- endfor %}
    ],

    {ok, {SupFlags, ChildSpecs}}.

