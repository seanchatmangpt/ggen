%% -*- erlang -*-
%% Rebar3 configuration for Telecom OTP Example

{erl_opts, [
    debug_info,
    warnings_as_errors,
    {parse_transform, lager_transform}
]}.

{deps, [
    {lager, "3.9.2"}  % Logging framework
]}.

{shell, [
    {apps, [telecom]},
    {config, "config/sys.config"}
]}.

{relx, [
    {release, {telecom, "1.0.0"}, [
        telecom,
        sasl,
        lager
    ]},

    {dev_mode, true},
    {include_erts, false},

    {extended_start_script, true},

    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"}
]}.

{profiles, [
    {prod, [
        {erl_opts, [no_debug_info, warnings_as_errors]},
        {relx, [
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]},

    {test, [
        {deps, [
            {proper, "1.4.0"},
            {meck, "0.9.2"}
        ]},
        {eunit_opts, [verbose, {report, {eunit_surefire, [{dir, "."}]}}]},
        {cover_enabled, true},
        {cover_opts, [verbose]}
    ]},

    {bench, [
        {deps, [
            {basho_bench, {git, "https://github.com/basho/basho_bench.git", {branch, "master"}}}
        ]}
    ]}
]}.

{project_plugins, [
    rebar3_proper,
    rebar3_lint
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        race_conditions,
        unknown
    ]},
    {plt_apps, all_deps}
]}.
