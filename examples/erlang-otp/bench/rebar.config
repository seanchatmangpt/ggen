%% rebar3 configuration for benchmark suite
{erl_opts, [
    debug_info,
    warnings_as_errors,
    {parse_transform, lager_transform}
]}.

{deps, [
    %% Performance monitoring
    {recon, "2.5.4"},

    %% Statistical analysis
    {bear, "0.8.7"},

    %% Logging
    {lager, "3.9.2"}
]}.

{profiles, [
    {bench, [
        {deps, [
            %% Basho Bench (if using as dependency)
            %% Note: Usually basho_bench is run standalone
            {folsom, "1.0.0"}  % Metrics collection
        ]},
        {erl_opts, [
            {d, 'BENCH'},
            no_debug_info  % Faster compilation for benchmarks
        ]}
    ]},

    {test, [
        {deps, [
            {meck, "0.9.2"},  % Mocking for fault injection tests
            {proper, "1.4.0"}  % Property-based testing
        ]}
    ]}
]}.

{shell, [
    {apps, [recon, lager]},
    {config, "config/sys.config"}
]}.

{dialyzer, [
    {warnings, [
        error_handling,
        race_conditions,
        underspecs
    ]},
    {plt_apps, all_deps}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

%% Code coverage
{cover_enabled, true}.
{cover_opts, [verbose]}.

%% Documentation
{edoc_opts, [
    {preprocess, true},
    {includes, ["include"]},
    {title, "Erlang/OTP Benchmark Suite"}
]}.
