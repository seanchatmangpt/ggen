[package]
name = "{{ project.name }}"
version = "{{ project.version }}"
description = "{{ project.description }}"
authors = [{% for author in project.authors %}"{{ author }}"{% if not loop.last %}, {% endif %}{% endfor %}]
edition = "{{ project.edition }}"
license = "{{ project.license }}"

[dependencies]
{% for dep in project.dependencies -%}
{{ dep.name }} = { version = "{{ dep.version }}"{% if dep.features %}, features = [{% for feature in dep.features %}"{{ feature }}"{% if not loop.last %}, {% endif %}{% endfor %}]{% endif %}{% if dep.optional %}, optional = true{% endif %} }
{% endfor %}

[dev-dependencies]
assert_cmd = "2.0"
predicates = "3.0"

[[bin]]
name = "{{ project.name }}"
path = "src/main.rs"
