[
    {kernel, [
        {logger_level, info},
        {logger, [
            {handler, default, logger_std_h, #{
                formatter => {logger_formatter, #{
                    template => [time," [",level,"] ",msg,"\n"],
                    utc => true
                }}
            }}
        ]}
    ]},
    {heijunka, [
        {pools, [payment, delivery, notification]},
        {regulator, #{
            soft_limit => 1000,
            hard_limit => 1200,
            reserved_capacity => 0.20
        }},
        {pool_config, #{
            payment => #{
                initial_workers => 5,
                max_workers => 15
            },
            delivery => #{
                initial_workers => 4,
                max_workers => 12
            },
            notification => #{
                initial_workers => 3,
                max_workers => 10
            }
        }}
    ]}
].
