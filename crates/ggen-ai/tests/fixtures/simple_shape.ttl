@prefix ex: <http://example.com/ontology#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

# Simple SHACL shape with basic properties
ex:PersonShape
    a sh:NodeShape ;
    sh:targetClass ex:Person ;
    sh:property [
        sh:path ex:name ;
        rdfs:comment "Person name property" ;
        sh:datatype xsd:string
    ] ;
    sh:property [
        sh:path ex:email ;
        rdfs:comment "Person email address" ;
        sh:datatype xsd:string
    ] ;
    sh:property [
        sh:path ex:age ;
        rdfs:comment "Person age in years" ;
        sh:datatype xsd:integer
    ] .
