# Multi-stage build for TAI Erlang Autonomics
FROM erlang:26-alpine AS builder

WORKDIR /build

# Install build dependencies
RUN apk add --no-cache git make

# Copy rebar config
COPY rebar.config rebar.lock* ./

# Fetch dependencies
RUN rebar3 deps

# Copy source
COPY apps/ apps/
COPY config/ config/
COPY rel/ rel/

# Build release
RUN rebar3 release

# Runtime stage
FROM erlang:26-alpine

WORKDIR /app

# Install runtime dependencies
RUN apk add --no-cache curl

# Copy release
COPY --from=builder /build/_build/default/rel/tai_autonomics /app

# GCP Environment Variables (Cloud Run will override PORT)
ENV PORT=8080
ENV GCP_PROJECT_ID=""
ENV GCP_REGION="us-central1"
ENV GCP_ZONE=""
ENV PUBSUB_SUBSCRIPTION="erlang-autonomics-signals"
ENV FIRESTORE_EMULATOR_HOST=""
ENV PUBSUB_EMULATOR_HOST=""
ENV FIRESTORE_ENABLED="true"
ENV TRACING_ENABLED="true"

# Health check (verifies GCP dependencies)
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
  CMD curl -f http://localhost:${PORT}/health || exit 1

# Start release
CMD ["/app/bin/tai_autonomics", "foreground"]
