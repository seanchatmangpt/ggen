%% TAIEA Core Bootstrap Application Configuration
%% Local rebar.config - inherits from workspace root for dependencies

{erl_opts, [
    debug_info,
    warn_missing_spec,
    warn_unused_vars,
    {suppress_warnings, [deprecated_unicode_character_literals]}
]}.

%% Dependencies are inherited from workspace root rebar.config
%% but can be overridden here if needed
{deps, []}.

%% EUnit configuration
{eunit_opts, [
    verbose,
    {report, {eunit_surefire, [{dir, "_build/test"}]}}
]}.

%% Common Test configuration
{ct_opts, [
    {sys_config, "config/sys.config"},
    {ct_hooks, [cth_surefire]}
]}.

%% Dialyzer configuration
{dialyzer, [
    {warnings, [underspecs, overspecs, specdiffs]},
    {get_warnings, true}
]}.

%% Code formatter (rebar3_format plugin)
{format, [
    {formatter, rebar3_format}
]}.

%% Plugins
{plugins, [
    rebar3_format
]}.
