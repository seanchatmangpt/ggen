# Environment Configuration Template
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=onboarding

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-development-secret-key-change-in-production
JWT_EXPIRATION=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# OAuth2 Configuration (Optional)
OAUTH2_ENABLED=false
OAUTH2_CLIENT_ID=
OAUTH2_CLIENT_SECRET=
OAUTH2_REDIRECT_URI=http://localhost:3000/auth/callback

# Stripe Configuration (Optional)
STRIPE_ENABLED=true
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_test_your_secret_here

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=SG.your_sendgrid_api_key
EMAIL_FROM=noreply@onboarding.io

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT_PATH=./logs

# Observability Configuration
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4318
OTEL_SERVICE_NAME=onboarding

# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_ENDPOINT=http://prometheus:9090

# Application Configuration
MAX_SETUP_DAYS=30
MAX_APPROVAL_DAYS=7
MIN_MEASUREMENT_ACCURACY=85
REQUIRE_TECHNICAL_REVIEW=true
REQUIRE_FINANCE_REVIEW=true

# Feature Flags
FEATURE_GO_LIVE_SWITCH=true
FEATURE_CUSTOM_FORMULAS=true
FEATURE_WEBHOOK_INTEGRATION=true
FEATURE_API_KEYS=true

# Alert Configuration
ALERT_THRESHOLD_ACCURACY_DROP=10
ALERT_THRESHOLD_VALUE_ANOMALY=20
ALERT_THRESHOLD_MEASUREMENT_ERROR=5

# Integration Configuration
SALESFORCE_ENABLED=true
SALESFORCE_INSTANCE_URL=
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=

HUBSPOT_ENABLED=true
HUBSPOT_API_KEY=

STRIPE_ENABLED=true
STRIPE_SECRET_KEY=

SEGMENT_ENABLED=true
SEGMENT_WRITE_KEY=

# Security Configuration
ENCRYPTION_ENABLED=true
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Webhook Configuration
WEBHOOK_SIGNING_ENABLED=true
WEBHOOK_SIGNING_SECRET=your-webhook-signing-secret-here
WEBHOOK_RETRY_ENABLED=true
WEBHOOK_MAX_RETRIES=5

# Backend Configuration
BACKEND_URL=http://localhost:3001
BACKEND_API_URL=http://localhost:3001/api/v1

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_ENV=development
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# GCP Configuration (Optional)
GCP_PROJECT_ID=
GCP_REGION=us-central1
GCP_CLOUD_RUN_SERVICE_NAME=onboarding-backend

# AWS Configuration (Optional)
AWS_REGION=us-east-1
AWS_S3_BUCKET=onboarding-backups
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=

# Debug Configuration
DEBUG=false
DEBUG_SQL=false
DEBUG_WEBHOOKS=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000

# Session Configuration
SESSION_SECRET=your-session-secret-key-here
SESSION_TIMEOUT=86400

# Database Migration
DB_MIGRATION_ENABLED=true
DB_SEED_ENABLED=false

# Custom Configuration
CUSTOM_DOMAIN=
CUSTOM_LOGO_URL=
SUPPORT_EMAIL=support@onboarding.io
COMPANY_NAME=Your Company Name
